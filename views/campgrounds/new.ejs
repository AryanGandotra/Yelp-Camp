<body>
    <h1>Add a new Campground</h1>
    <form method='post' action="/campgrounds">
        <div>
            <label for="title">Title</label>
            <input type="text" name="campground[title]" id="title">
        </div>
        <div>
            <label for="location">Location</label>
            <input type="text" name="campground[location]" id="location">
        </div>
        <div>
            <label for="price">Price</label>
            <input type="number" name="campground[price]" id="price">
        </div>
        <!-- <div>
            <label for="image">Image</label>
            <input type="text" name="campground[image]" id="image">
        </div> -->
        <div>
            <label for="description">Description</label>
            <textarea name="campground[description]" id="description"></textarea>
        </div>
        <button>Submit</button>
    </form>
</body>

</html>