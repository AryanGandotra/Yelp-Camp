<%= layout("layouts/boilerplate") %>

    <!-- <a href="/campgrounds/new">Add New Campground</a> -->

    <%for(let element of campgrounds){%>
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <img style="height:300px; width: 100%; object-fit: cover;" class="img-fluid"
                        src="<%= element.image %>" alt="">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= element.title %>
                        </h5>
                        <p class="card-text">
                            <%= element.description %>
                        </p>
                        <p class="card-text ">
                            <small class="text-secondary">
                                <%= element.location %>
                            </small>
                        </p>
                        <a href="/campgrounds/<%= element._id %>" class="btn btn-primary">View <%= element.title %> </a>
                    </div>
                </div>
            </div>
        </div>
        <%} %>